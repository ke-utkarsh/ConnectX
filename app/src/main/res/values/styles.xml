<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoActionBarTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TransparentProgressDialog" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#2079E5</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#2079E5</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AckDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="Theme.AppCompat.Translucent" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="Theme.MyAppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:background">@color/black</item>
    </style>

    <style name="CustomDialog" parent="Theme.AppCompat" >
        <item name="android:windowBackground">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="SwitchTheme" parent="Theme.AppCompat.Light">
        <item name="android:colorControlActivated">@color/colorAccent</item>
        <item name="android:colorControlNormal">@color/facebookBlue</item>
    </style>

    <style name="NumberPickerTheme">
        <item name="android:textSize">50sp</item>
    </style>

    <style name="input_dialog_field">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="label_input_dialog_field">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
        <item name="layout_constraintWidth_percent">.4</item>
    </style>

    <style name="DialogTheme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="colorAccent">#2079E5</item>
    </style>

    <style name="image_picker_selection_dialog">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
    </style>

    <style name="CustomLocateBike" parent="android:Theme.DeviceDefault.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">@string/progress_locate_my_bike</item>
        <item name="DialogSpotColor">@color/white</item>
        <item name="DialogSpotCount">4</item>
    </style>

    <style name="CustomAnswerBack" parent="android:Theme.DeviceDefault.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">@string/progress_answer_back</item>
        <item name="DialogSpotColor">@color/white</item>
        <item name="DialogSpotCount">4</item>
    </style>

    <style name="CustomELock" parent="android:Theme.DeviceDefault.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">@string/progress_elock</item>
        <item name="DialogSpotColor">@color/white</item>
        <item name="DialogSpotCount">4</item>
    </style>

    <style name="ConnectingBike" parent="android:Theme.DeviceDefault.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">@string/connecting_bike</item>
        <item name="DialogSpotColor">@color/white</item>
        <item name="DialogSpotCount">4</item>
    </style>

    <style name="DisconnectingBike" parent="android:Theme.DeviceDefault.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">@string/disconnecting_bike</item>
        <item name="DialogSpotColor">@color/white</item>
        <item name="DialogSpotCount">4</item>
    </style>

    <!-- Styles for the confirmation dialog displayed on the Scan QR screen -->
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_down_dialog</item>
    </style>

    <style name="DialogSlideAnim" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="ThemeOverlay.AppCompat.navTheme">
        <item name="colorPrimary">@color/bg_nav_item</item>
        <item name="colorControlHighlight">@color/bg_nav_item_selected</item>
    </style>

    <style name="CustomConnecting" parent="android:Theme.DeviceDefault.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">@string/connecting_bike</item>
        <item name="DialogSpotColor">@color/white</item>
        <item name="DialogSpotCount">4</item>
    </style>
</resources>

